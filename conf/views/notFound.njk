{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("pageNotFound.title")) }}
{% endblock %}

{% block mainContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">{{ messages("pageNotFound.heading") }}</h1>

      <p class="govuk-body">{{ messages("pageNotFound.p1") }}</p>

      <p class="govuk-body">{{ messages("pageNotFound.p2") }}</p>

      <p class="bottom-margin govuk-body">
        {{ messages("pageNotFound.p3a") }} <a href={{ emailAddress }} class="govuk-link"> {{ messages("pageNotFound.email")}} </a>
        {{ messages("pageNotFound.p3b") }}
        </p>

      {% if message %}
        <p class="govuk-body">
          {{ messages(message) }}
        </p>
      {% endif %}

  </div>
{% endblock %}