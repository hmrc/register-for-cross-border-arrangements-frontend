{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}
{% from "govuk/components/panel/macro.njk"         import govukPanel %}


{% block pageTitle %}
  {{ title(messages("registrationSuccessful.title")) }}
{% endblock %}

{% block mainContent %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {{ govukPanel({
            titleText: messages("registrationSuccessful.panel"),
            html: subscriptionID
        }) }}

        <div class="govuk-body">
          <p>{{ messages("registrationSuccessful.subscriptionID.text") }}</p>

          <h2 class="govuk-heading-m">
            {{ messages("registrationSuccessful.heading") }}
          </h2>

          <p>{{ messages("registrationSuccessful.email") }}</p>
          <p>
            {{ messages("registrationSuccessful.submission.text") }}
            <a href={{submissionUrl}} class="govuk-link">{{messages("registrationSuccessful.submission.link")}}</a>
          </p>
          <p>
            <a class='govuk-link' id='feedback-link' href='{{betaFeedbackSurvey}}' rel='noreferrer noopener' target='_blank'>
              {{ messages("registrationSuccessful.survey.link") }}
            </a>
            {{ messages("registrationSuccessful.survey.text") }}
          </p>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
